<h1> All Lists </h1>


  <% @lists.each do |list| %>

        <% if list.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">

        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <% end %>

      <h2><%= link_to list.name, list_path(list) %></h2>

      </div>
  <% end %>
<button type="button" class="btn btn-success"><%= link_to "Add a list", new_list_path(@list) %></button>
</div>
